<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Admin ListBorrowItems</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <header>
      <nav class="navbar bg-body-tertiary fixed-top">
        <div class="container-fluid">
          <a class="navbar-brand" href="/AdminMain">AdminControl</a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="offcanvas"
            data-bs-target="#offcanvasNavbar"
            aria-controls="offcanvasNavbar"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div
            class="offcanvas offcanvas-end"
            tabindex="-1"
            id="offcanvasNavbar"
            aria-labelledby="offcanvasNavbarLabel"
          >
            <div class="offcanvas-header">
              <h5
                class="offcanvas-title"
                id="offcanvasNavbarLabel"
              >รายการเมนู</h5>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="offcanvas"
                aria-label="Close"
              ></button>
            </div>
            <div class="offcanvas-body">
              <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                <li class="nav-item">
                  <a
                    class="nav-link text-center"
                    aria-current="page"
                    href="/AdminMain"
                  >หน้าแรก</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link text-center" href="/MeetingRoom">จัดการห้องประชุม</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link text-center" href="/BorrowItems">รายการยืมของ</a>
                </li>

              </ul>
              <hr />
              <form method="POST" action="/Logout">
                <br /><br />
                <p class="text-center">หน้าสำหรับแอดมิน</p>
                <p class="text-center">ยินดีตอนรับคุณ: {{name}}</p>
                <div class="text-center"><button
                    class="btn btn-danger"
                    type="submit"
                  >ออก</button></div>

              </form>
            </div>
          </div>
        </div>
      </nav>
    </header>
    <br /><br /><br />
    <!-- Section: Design Block -->

    <section class="container">
      <p class="text-center">รายการยืมอุปกรณ์</p>

      <div class="card" style="padding:20px">
        <div class="row mb-2">
          <div class="col">
            <!-- Button trigger modal -->
            
        </div>
        

        <table class="table table-bordered text-center">

          <thead>
            <tr>
              <th scope="col">ลำดับ</th>
              <th scope="col">ชื่อห้องประชุม</th>
              <th scope="col">ชื่อผู้เช่า</th>
              <th scope="col">เบอร์โทร</th>
              <th scope="col">การยืมของ</th>
            </tr>
          </thead>
          <tbody>
            {{#each datasend}}
              <tr>
                <th scope="row">{{this.ID}}</th>
                <td>{{this.Roomname}}</td>
                <td>{{this.Name}} {{this.LastName}}</td>
                <td>{{this.Phone}}</td>
                <td>{{this.BorrowItems}}</td>
                <td><!-- Button trigger modal -->
                  <button
                    type="button"
                    class="btn btn-warning"
                    data-bs-toggle="modal"
                    data-bs-target="#exampleModal{{this.ID}}"
                  >
                    แก้ไข
                  </button>
                  <button
                    type="button"
                    class="btn btn-danger"
                    onclick="DeleteData({{this.ID}})"
                  >
                    ลบ
                  </button>
                  </td>
              </tr>
              <!-- Modal -->
              <div
                class="modal fade"
                id="exampleModal{{this.ID}}"
                tabindex="-1"
                aria-labelledby="exampleModalLabel"
                aria-hidden="true"
              >
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h1
                        class="modal-title fs-5"
                        id="exampleModalLabel"
                      >แก้ไขห้อง {{this.Name}}</h1>
                      <button
                        type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                        aria-label="Close"
                      ></button>
                    </div>
                    <div class="modal-body">
                      <form class="">
                        <div class="row d-flex align-content-center">
                          <div class="col-auto">
                            <label for="name{{this.ID}}">ชื่อห้องประชุม</label>
                            <input type="hidden" value="{{this.ID}}" id="index{{this.ID}}"/>
                            <input
                              type="text"
                              class="form-control"
                              id="name{{this.ID}}"
                              value="{{this.Name}}"
                            />
                          </div>
                          <div class="col-auto">
                            <label for="price{{this.ID}}">ราคาเช่า</label>
                            <input
                              type="text"
                              class="form-control"
                              id="price{{this.ID}}"
                              value="{{this.Price}}"
                            />
                          </div>
                        </div>
                        <div class="row">
                          <div class="col">
                            <label for="des{{this.ID}}">รายละเอียด</label>
                            <textarea
                              style="height: 120px;"
                              type="text"
                              class="form-control"
                              id="des{{this.ID}}"
                              placeholder="ใส่รายละเอียด"
                            >{{this.Des}}</textarea>
                          </div>
                        </div>
                        <br />
                        <div class="row">
                          <div class="col">
                            <div class="mb-3">
                              <label
                                for="formFile"
                                class="form-label"
                              >รูปแสดงตัวอย่างห้องประชุม</label>
                              <input
                                class="form-control"
                                type="file"
                                id="file{{this.ID}}"
                                name="file{{this.ID}}"
                              />
                            </div>
                          </div>
                        </div>

                      </form>
                    </div>
                    <div class="modal-footer">
                      <button
                        type="button"
                        class="btn btn-danger"
                        data-bs-dismiss="modal"
                      >ปิด</button>
                      <button
                        type="button"
                        class="btn btn-success"
                        onclick="updatedata({{this.ID}})"
                      >บันทึก</button>
                    </div>
                  </div>
                </div>
              </div>
            {{/each}}
          </tbody>
        </table>
      </div>
    </section>
    <!-- Section: Design Block -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>
    <!--Sweetalert2 library-->
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!--GET library Ajax-->
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.3/jquery.min.js"
    ></script>
    <script>
      function insertdata(){
        const formData = new FormData();
        const name = document.getElementById('name').value 
        const price = document.getElementById('price').value 
        const des = document.getElementById("des").value
        const file = document.getElementById("file").files[0]
        const files = $('#file')[0].files;
        const nameimage = "http://localhost:4000/roomimage/"+file.name
        if(file){
          formData.append('file', file,file.name);
        }
        
        $.ajax({
          url:"http://localhost:4000/UpLoadImage",
          method:"POST",
          data:formData,
          contentType: false,
          processData: false,
          
        })
        $.ajax({
           method:"get", 
           url:"/InsertRoom", 
           data:{name:name,price:price,des:des,nameimg:nameimage}
        }).done(function(status){
          if(status ==="Success"){
            Swal.fire({
                title:'เพิ่มข้อมูลห้องสำเร็จ',
                icon:'success',
                timer: 1100 ,
                showConfirmButton: false,
              }).then((res)=>{
                if(res){
                    window.location.reload()
                }
              })
          }else{
            Swal.fire({
                title:'เพิ่มข้อมูลห้องไม่สำเร็จ',
                icon:'error',
                timer: 1100 ,
                showConfirmButton: false,
              }).then((res)=>{
                if(res){
                    window.location.reload()
                }
              })
          }
            
        })
      }
      function updatedata(index){ 
        const formData = new FormData();
        const index1 = document.getElementById("index"+index).value
        const name = document.getElementById('name'+index).value 
        const price = document.getElementById('price'+index).value 
        const des = document.getElementById("des"+index).value
        const file = document.getElementById("file"+index).files[0]
        const files = $('#file'+index)[0].files;
        
        console.log(index)
        if(file){
          formData.append('file', file,file.name);
          $.ajax({
          url:"http://localhost:4000/UpLoadImage",
          method:"POST",
          data:formData,
          contentType: false,
          processData: false,
          
        })
        $.ajax({
            method:"get", 
            url:"/UpdateRoom", 
            data:{name:name,price:price,des:des,index:index1}
          }).done(function(status){
            if(status ==="success"){
              Swal.fire({
                title:'อัพเดตข้อมูลสำเร็จ',
                icon:'success',
                timer: 1100 ,
                showConfirmButton: false,
              }).then((res)=>{
                if(res){
                    window.location.reload()
                }
              })
            }else{
              Swal.fire({
                title:'ไม่สามารถอัพเดตข้อมูลได้',
                icon:'error',
                timer: 1100 ,
                showConfirmButton: false,
              }).then((res)=>{
                if(res){
                    window.location.reload()
                }
              })
            }
              
          })
        }else{
          $.ajax({
            method:"get", 
            url:"/UpdateRoom", 
            data:{name:name,price:price,des:des,index:index1}
          }).done(function(status){
            if(status ==="success"){
              Swal.fire({
                title:'อัพเดตข้อมูลสำเร็จ',
                icon:'success',
                timer: 1100 ,
                showConfirmButton: false,
              }).then((res)=>{
                if(res){
                    window.location.reload()
                }
              })
              
            }else{
              Swal.fire({
                title:'ไม่สามารถอัพเดตข้อมูลได้',
                icon:'error',
                timer: 1100 ,
                showConfirmButton: false,
              }).then((res)=>{
                if(res){
                    window.location.reload()
                }
              })
            }
              
          })
        }
        
      }

      function DeleteData(index){
          Swal.fire({
            title: 'แน่ใจรึป่าวว่าต้องการลบข้อมูลนี้',
            icon: 'warning',
            showCancelButton: true,
            cancelButtonColor: '#d33',
            confirmButtonColor: '#3085d6',
            
            confirmButtonText: 'ตกลง',
            cancelButtonText:"ไม่"
          }).then((result) => {
            if (result.isConfirmed) {
              $.ajax({
                method:"GET",
                url:"/DeleteData",
                data:{index}
              }).done(function(res){
                if(res ==="success"){
                      Swal.fire({
                        title:'ลบข้อมูลสำเร็จ',
                        icon:'success',
                        timer: 1100 ,
                        showConfirmButton: false,
                      }).then((res)=>{
                        if(res){
                            window.location.reload()
                        }
                      })
                    }else{
                      Swal.fire({
                        title:'ไม่สามารถลบข้อมูลได้',
                        icon:'error',
                        timer: 1100 ,
                        showConfirmButton: false,
                      }).then((res)=>{
                        if(res){
                            window.location.reload()
                        }
                      })
                    }
              })
            }
          })
      }
    </script>
  </body>
</html>